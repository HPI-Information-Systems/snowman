{
  "name": "snowman-wrapper",
  "author": "Snowman Team",
  "description": "Compare data matching algorithms with each other",
  "version": "2.0.0",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build-no-database && electron .",
    "start-api": "npm run build && node ./dist/api/main.js",
    "build": "npm run build-no-database && node ./dist/api/buildDatabase.js",
    "build-no-database": "rimraf ./dist/* && tsc",
    "erebuild": "run-script-os",
    "erebuild:windows": ".\\node_modules\\.bin\\electron-rebuild.cmd",
    "erebuild:default": "electron-rebuild",
    "test": "jest --testPathIgnorePatterns=\".only-ci.spec.ts$\"",
    "test-ci": "jest",
    "release": "rimraf ./build/* && npm run build && electron-builder"
  },
  "build": {
    "asar": "true",
    "appId": "de.hpi.snowman-wrapper",
    "productName": "snowman",
    "files": [
      "./app",
      "./dist",
      "./preload",
      "./public",
      "./assets",
      "./icon.png"
    ],
    "extraResources": [],
    "extraMetadata": {
      "main": "./dist/main.js"
    },
    "directories": {
      "output": "./build",
      "buildResources": "."
    },
    "mac": {
      "target": "dmg",
      "darkModeSupport": true
    },
    "win": {
      "target": "zip"
    },
    "linux": {
      "target": "zip"
    }
  },
  "dependencies": {
    "@types/tmp": "^0.2.0",
    "axios": "^0.21.1",
    "better-sqlite3": "git+https://github.com/phpfs/better-sqlite3.git",
    "binary-search": "^1.3.6",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "csv-parse": "^4.15.1",
    "csv-stringify": "^5.6.1",
    "dashdash": "^2.0.0",
    "express": "^4.16.4",
    "express-openapi-validator": "^4.10.10",
    "fs-extra": "^9.1.0",
    "rxjs": "^6.6.6",
    "tmp": "^0.2.1",
    "topological-sort": "^0.3.0",
    "wait-for-localhost": "^3.3.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/dashdash": "^1.14.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.14",
    "@types/rimraf": "^3.0.0",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.5",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.5",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
